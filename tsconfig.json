{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,

    "strict": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "suppressExcessPropertyErrors": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
