{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "lib": ["dom", "es2017", "es2019"],

    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,

    "strict": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "suppressExcessPropertyErrors": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "runtime"]
}
